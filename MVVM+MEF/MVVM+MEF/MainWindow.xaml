<Window x:Class="MVVM_MEF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" >
    <StackPanel>
        <DataGrid ItemsSource="{Binding DataItems}" GridLinesVisibility="All" SelectionMode="Single"
                  IsReadOnly="True" CanUserAddRows="False" RowHeaderWidth="0" Margin="10"/>
    </StackPanel>
</Window>
